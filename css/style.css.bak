/* googlemap */
.title-3 {
  margin-top: 50px;
  margin-left: 250px;
  font-size: 50px;
  font-weight: 700;
  font-family: "agency fb";
}
#map {
  width: 800px;
  height: 450px;
  background-color: #ccc;
  margin: 0 auto;
  overflow: hidden;
}
